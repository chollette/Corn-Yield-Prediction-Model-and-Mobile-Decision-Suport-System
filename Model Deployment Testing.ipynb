    "# Encode and serialize data\n",
    "\n",
    "def prepare_data(data):\n",
    "    #label encoding\n",
    "    le = LabelEncoder()\n",
    "    data['State'] = le.fit_transform(data['State'])\n",
    "    return data  \n",
    "\n",
    "test = prepare_data(data)\n",
    "# Serializing json   \n",
    "test = test.to_json()\n",
    "test = \"{\\\"data\\\": \" + test +\"}\"\n",
    "\n",
   ]
