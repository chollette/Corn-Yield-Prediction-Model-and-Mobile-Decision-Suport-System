    "# make prediction\n",
    "\n",
    "def predict(data, model):\n",
    "    try:\n",
    "        #load as json file\n",
    "        data = json.loads(data)['data']  \n",
    "        data = pd.DataFrame(data)\n",
    "        #request.get_json()\n",
    "        \n",
    "        # make prediction    \n",
    "        result = model.predict(data)\n",
    "        return result.tolist()\n",
    "    except Exception as e:\n",
    "        error = str(e)\n",
    "        print(\"ERROR: \" + error + \" \" + time.strftime(\"%H:%M:%S\"))\n",
    "        return error"
   ]
